mixin pagination()
    ul.pagination
        a(href="#").prev.page-numbers 
            <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect width="40" height="40" transform="matrix(-1 0 0 1 40 0)" fill="#D20000"/>
            <path d="M24 11L16 19.5L24 28" stroke="white" stroke-width="2"/>
            </svg>
        a(href="#").page-numbers 1
        span.page-numbers.current 2
        a(href="#").page-numbers 3
        a(href="#").next.page-numbers
            <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect width="40" height="40" transform="matrix(-1 0 0 1 40 0)" fill="#D20000"/>
            <path d="M24 11L16 19.5L24 28" stroke="white" stroke-width="2"/>
            </svg>       
